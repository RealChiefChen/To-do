#!/usr/bin/python3

#G.a.R.I
#Grade.
#a.
#Robot.
#Intenigence.

import os
import notify2
import time
from configparser import ConfigParser

CON=ConfigParser()
USE=os.getlogin()
notify2.init("")
CON.read(f"/home/{USE}/To-do/config.ini")

while True:
    RED=open(f"/home/{USE}/To-do/reminder.txt", "r")
    RED2=open(f"/home/{USE}/To-do/reminder.txt", "r").read()

    if CON["reminder"]["speak"]=="True":
        WORD=RED.read().replace(" ", "_")
        os.system(f"espeak-ng Remember_to_{WORD}.")
    if CON["reminder"]["notify"]=="True":
        NOT=notify2.Notification("G.a.R.I", f"Remember to {RED2}", f"/home/{USE}/To-do/GaRI_happy.png")
        NOT.show()

    RED.close

    if CON["freq"]["1hour"]=="True":
        time.sleep(3600)
    if CON["freq"]["30min"]=="True":
        time.sleep(1800)
    if CON["freq"]["10min"]=="True":
        time.sleep(600)
    if CON["freq"]["5min"]=="True":
        time.sleep(300)
